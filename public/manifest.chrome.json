{
  "manifest_version": 3,
  "name": "React+Vite Extension Template",
  "version": "0.0.2",
  "description": "Create extensions with React+Vite with this template. Click on the homepage URL to learn more.",
  "homepage_url": "https://github.com/alialmasi/tvu-courses-xlsx-extension",
  "author": "Ali Almasi",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["*.woff2"],
      "matches": ["<all_urls>"]
    }
  ]
}
