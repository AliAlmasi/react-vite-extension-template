{
  "manifest_version": 2,
  "name": "React+Vite Extension Template",
  "version": "0.0.2",
  "description": "Create extensions with React+Vite with this template. Click on the homepage URL to learn more.",
  "homepage_url": "https://github.com/alialmasi/react-vite-extension-template",
  "author": "Ali Almasi",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["activeTab", "tabs"],
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },
  "web_accessible_resources": ["*.woff2"],
  "browser_specific_settings": {
    "gecko": {
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
